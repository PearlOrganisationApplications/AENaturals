<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".distributors.fragments.DistributorProductsFragment">

            <include
                android:id="@+id/salesman_more_header"
                layout="@layout/distributor_more_header" />

            <include
                android:id="@+id/pendingorderslayout"
                layout="@layout/pendingorderslayout"
                android:visibility="visible" />

            <include
                android:id="@+id/pending_payment_layout"
                layout="@layout/pending_payment_layout"
                android:visibility="gone" />

            <include
                android:id="@+id/return_order_layout"
                layout="@layout/return_order_layout"
                android:visibility="gone" />

            <include
                android:id="@+id/distributorProfit"
                layout="@layout/distributor_profit_layout"
                android:visibility="gone" />

            <include
                android:id="@+id/distributor_allOrder_layout"
                layout="@layout/distributor_order_history_layout"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>