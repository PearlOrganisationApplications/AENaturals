<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profit/Earning"
        android:textSize="@dimen/sd16"
        android:textStyle="bold"
        android:fontFamily="@font/lemon"
        android:textColor="@color/darkgreen"
        android:background="@color/midgreen"
        android:padding="@dimen/sd6"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sd20"
        android:layout_weight="1"
        android:layout_margin="@dimen/sd6"
        android:backgroundTint="@color/midgreen"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/midgreen"
        android:padding="8dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/sd6"
            android:id="@+id/dateFilterLayoutDP"
            android:gravity="right"
            android:background="@color/midgreen"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/sd20"
                android:layout_height="@dimen/sd20"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_calendar_month_24"
                />

            <TextView
                android:id="@+id/startDateTextViewDP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date - End Date"
                android:padding="@dimen/sd4"
                android:textColor="@color/darkgreen"
                android:textStyle="bold"
                />


        </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/darkgreen"
    android:textStyle="bold"
    android:textSize="@dimen/sd14"
    android:text="Total Earnings"
    android:padding="@dimen/sd6"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            android:textSize="@dimen/sd20"
            android:text="Rs 21000"
            android:padding="@dimen/sd6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            android:textSize="@dimen/sd12"
            android:text="Click to change date"
            android:padding="@dimen/sd6"
            />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sd6"
        android:orientation="horizontal"
        android:background="@color/midgreen"
        android:padding="@dimen/sd8"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Items Ordererd till date: "
            android:layout_weight="1"
            android:textSize="@dimen/sd12"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/sd14"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/midgreen"
        android:padding="@dimen/sd8"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Pending Orders: "
            android:layout_weight="1"
            android:textSize="@dimen/sd12"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/sd14"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/midgreen"
        android:padding="@dimen/sd8"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Order Returned: "
            android:layout_weight="1"
            android:textSize="@dimen/sd12"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/sd14"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>