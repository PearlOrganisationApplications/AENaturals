<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sales team"
    android:textStyle="bold"
    android:id="@+id/addSellers"
    android:padding="@dimen/sd6"
    android:drawableEnd="@drawable/ic_baseline_filter_list_16"
    android:drawablePadding="@dimen/sd10"
    android:textColor="@color/darkgreen"
    android:background="@color/midgreen"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sd6"
        android:id="@+id/distributorTopRecycler"
        />
</LinearLayout>