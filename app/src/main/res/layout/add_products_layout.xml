<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sd4"
        android:layout_marginHorizontal="@dimen/sd4"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/bangers"
        android:text="Sell Items"
        android:textColor="@color/darkgreen"
        android:textSize="@dimen/sd26"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_storeparor"
            app:tint="@color/darkgreen" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sd4"
        android:orientation="horizontal"
        android:background="@color/midgreen"
        android:padding="@dimen/sd8"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name: "
            android:layout_weight="1"
            android:textSize="@dimen/sd12"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ms. John Doe"
            android:textSize="@dimen/sd14"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="@dimen/sd4"
        android:layout_marginHorizontal="@dimen/sd10"
        android:backgroundTint="@color/midgreen"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sd8"
            android:hint="search Items"
            android:background="@null"
            android:textColor="@color/darkgreen"
            android:drawableEnd="@drawable/ic_searchglossy"
            />

    </androidx.cardview.widget.CardView>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_margin="@dimen/sd4"
    android:id="@+id/cust_addproducts_recycler"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sd4"
        android:orientation="horizontal"
        android:background="@color/midgreen"
        android:padding="@dimen/sd8"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items added: "
            android:layout_weight="1"
            android:textSize="@dimen/sd12"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/sd14"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/midgreen"
        android:padding="@dimen/sd8"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items Total : "
            android:layout_weight="1"
            android:textSize="@dimen/sd12"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textSize="@dimen/sd14"
            android:layout_marginHorizontal="6dp"
            android:textColor="@color/darkgreen"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgreen"
        android:orientation="horizontal"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cust_new_order_button"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginVertical="@dimen/sd8"
        android:layout_marginHorizontal="@dimen/sd14"
        app:cardCornerRadius="@dimen/sd12"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="@dimen/sd12"
            android:drawableEnd="@drawable/ic_baseline_draw_32"
            android:textStyle="bold"
            android:textColor="@color/darkgreen"
            android:gravity="center"
            android:padding="@dimen/sd8"
            />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/midgreen"
            android:layout_marginVertical="@dimen/sd8"
            android:layout_marginHorizontal="@dimen/sd14"
            app:cardCornerRadius="@dimen/sd12"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="@dimen/sd12"
                android:visibility="gone"
                android:drawableEnd="@drawable/ic_baseline_checklist_rtl_24"
                android:textStyle="bold"
                android:textColor="@color/darkgreen"
                android:gravity="center"
                android:padding="@dimen/sd8"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>