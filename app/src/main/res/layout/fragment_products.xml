<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.aenatural.aenaturals.salesmans.fragments.ProductsFragment">


            <include
                android:id="@+id/salesman_more_header"
                layout="@layout/salesman_more_header" />

            <include layout="@layout/pendingorderslayout"
                android:id="@+id/pendingorderslayout"
                />

            <include layout="@layout/pending_payment_layout"
                android:id="@+id/pending_payment_layout"
                android:visibility="gone"
                />

            <include layout="@layout/return_order_layout"
                android:visibility="gone"
                android:id="@+id/return_order_layout"/>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>