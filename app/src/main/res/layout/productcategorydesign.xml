<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sd6"
    android:background="@color/lightgreen"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/sd8"
        >
        <ImageView
            android:layout_width="@dimen/sd38"
            android:layout_height="@dimen/sd38"
            android:src="@drawable/ic_skincare2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:text="Skin Care"

            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/sd8"
            >
            <ImageView
                android:layout_width="@dimen/sd30"
                android:layout_height="@dimen/sd30"
                android:src="@drawable/ic_haircare"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgreen"
                android:text="Hair Care"
                android:layout_marginTop="@dimen/sd6"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/sd8"
        >
        <ImageView
            android:layout_width="@dimen/sd30"
            android:layout_height="@dimen/sd30"
            android:src="@drawable/ic_herbal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:text="Herbal\n Powder"
            android:gravity="center"
            android:layout_marginTop="@dimen/sd6"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/sd8"
            >
            <ImageView
                android:layout_width="@dimen/sd30"
                android:layout_height="@dimen/sd30"
                android:src="@drawable/ic_health"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgreen"
                android:text="Nutritional "
                android:layout_marginTop="@dimen/sd6"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/sd8"
            >
            <ImageView
                android:layout_width="@dimen/sd30"
                android:layout_height="@dimen/sd30"
                android:src="@drawable/ic_personal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgreen"
                android:gravity="center"
                android:text="Personal \nCare"
                android:layout_marginTop="@dimen/sd6"
                />
        </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/sd8"
        >
        <ImageView
            android:layout_width="@dimen/sd30"
            android:layout_height="@dimen/sd30"
            android:src="@drawable/ic_aroma"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:text="Aroma\nPoweders"
            android:gravity="center"
            android:layout_marginTop="@dimen/sd6"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/sd8"
        >
        <ImageView
            android:layout_width="@dimen/sd30"
            android:layout_height="@dimen/sd30"
            android:src="@drawable/ic_essentialoil"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgreen"
            android:gravity="center"
            android:text="Essential \nOils"
            android:layout_marginTop="@dimen/sd6"
            />
    </LinearLayout>

</LinearLayout>
</HorizontalScrollView>