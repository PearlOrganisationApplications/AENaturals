<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/sd10"
    android:background="@color/white"
    android:layout_marginHorizontal="@dimen/sd8"
    android:layout_marginVertical="@dimen/sd6"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personIV"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_skincare2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sd10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/customerNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer name"
                android:textSize="@dimen/sd18"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/customerDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Details"
                android:textSize="@dimen/sd14"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>