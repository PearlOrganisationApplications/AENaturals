<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/sd10"
    android:gravity="center"
    android:padding="@dimen/sd10"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sd10"
        app:cardBackgroundColor="@color/darkgreen">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/sd16"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sd14"
            android:text="continue as Salesman"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sd10"
        android:layout_marginVertical="@dimen/sd10"
        app:cardBackgroundColor="#109C74">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/sd16"
            android:text="continue as Retailer"
            android:textColor="@color/white"
            android:textSize="@dimen/sd14"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/sd10"
        app:cardBackgroundColor="#10AC80">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/sd16"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sd14"
            android:text="continue as Distributor"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>