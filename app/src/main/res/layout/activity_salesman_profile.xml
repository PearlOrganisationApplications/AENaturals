<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgreen3"
            android:orientation="vertical"
            tools:context="com.aenatural.aenaturals.salesmans.SalesmanProfileActivity">

            <TextView
                android:id="@+id/backTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/midgreen"
                android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
                android:gravity="center"
                android:padding="@dimen/sd10"
                android:text="Your Profile"
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/sd14"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/sd10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="User Name"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="(Salesperson)"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd12" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/sale_profilePic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_skincare2" />

                <ImageView
                    android:id="@+id/sale_edtProfile"
                    android:layout_width="@dimen/sd24"
                    android:layout_height="@dimen/sd24"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_baseline_edit"
                    app:tint="@color/darkgreen" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_emailLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email-id"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="email@gmail.com"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_emailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="Email-id"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sale_phoneNoLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phone-no"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="894512325"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_phoneNoEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="Phone No"
                android:imeOptions="actionNext"
                android:inputType="phone|numberDecimal"
                android:maxLength="13"
                android:maxLines="1"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sale_addressLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="address"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="sector-12 , mohali, punjab"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_addressEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sd6"
                android:layout_marginTop="@dimen/sd6"
                android:layout_marginEnd="@dimen/sd6"
                android:layout_marginBottom="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="2"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sale_cityTVLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:layout_weight="1"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="city"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="dehradun"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:layout_weight="1"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pincode"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="248001"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_cityEdtLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/sale_cityEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:layout_weight="1"
                    android:background="@drawable/cardbg"
                    android:hint="City"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:minHeight="45dp"
                    android:padding="5dp"
                    android:textColor="@color/darkgreen"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/sale_pincodeEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:layout_weight="1"
                    android:background="@drawable/cardbg"
                    android:hint="State"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:minHeight="45dp"
                    android:padding="5dp"
                    android:textColor="@color/darkgreen"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_stateLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="state"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="Uttarakhand"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_stateEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="State"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sale_instaIdLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="insta/fb-id"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="user@34x"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_instaIdEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="insta/fb id"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sale_adharNoLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adhar No"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="2480 0112 7894"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_adharNoEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sd6"
                android:layout_marginTop="@dimen/sd6"
                android:layout_marginEnd="@dimen/sd6"
                android:layout_marginBottom="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="Adhar no"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:maxLines="1"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sale_panLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pan-no"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="AEZXW248001T"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/sale_panEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sd6"
                android:layout_marginTop="@dimen/sd6"
                android:layout_marginEnd="@dimen/sd6"
                android:layout_marginBottom="@dimen/sd6"
                android:background="@drawable/cardbg"
                android:hint="Pan No"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:minHeight="45dp"
                android:padding="5dp"
                android:textColor="@color/darkgreen"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd6"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sale_adharcardPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd4"
                    android:layout_weight="1"
                    android:background="@drawable/cardbg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/sd8">

                    <ImageView
                        android:id="@+id/sale_adharPic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="@dimen/sd6"
                        android:src="@drawable/ic_baseline_document_scanner_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="adhar image"
                        android:textColor="@color/darkgreen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sale_panCardPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd4"
                    android:layout_weight="1"
                    android:background="@drawable/cardbg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/sd8">

                    <ImageView
                        android:id="@+id/sale_panImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"

                        android:layout_marginHorizontal="@dimen/sd6"

                        android:src="@drawable/ic_baseline_document_scanner_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="pan image"
                        android:textColor="@color/darkgreen" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/sale_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd10"
                android:visibility="gone"
                android:backgroundTint="@color/midgreen"
                android:padding="@dimen/sd4"
                android:text="Update Profile"
                android:textColor="@color/darkgreen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd10"
                android:layout_marginBottom="@dimen/sd4"
                android:gravity="bottom"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="@color/midgreen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sd4"
                        android:gravity="center"
                        android:text=" more "
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="@color/midgreen" />
                </LinearLayout>

                <include
                    android:id="@+id/customercareLayout"
                    layout="@layout/customercarelayout"
                    android:visibility="gone" />

                <include
                    android:id="@+id/privacypolicylayout"
                    layout="@layout/privacypolicylayout"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/customercarebutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sd14"
                        android:layout_marginVertical="@dimen/sd8"
                        android:layout_weight="1"
                        android:backgroundTint="@color/midgreen"
                        app:cardCornerRadius="@dimen/sd12">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_supportdarkgreen"
                            android:gravity="center"
                            android:padding="@dimen/sd8"
                            android:text="Customer Care"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/sd10"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/privacypolicyButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sd14"
                        android:layout_marginVertical="@dimen/sd8"
                        android:layout_weight="1"
                        android:backgroundTint="@color/midgreen"
                        app:cardCornerRadius="@dimen/sd12">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_baseline_text_snippet_24"
                            android:gravity="center"
                            android:padding="@dimen/sd8"
                            android:text="Privacy Policy"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/sd10"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sd14"
                        android:layout_marginVertical="@dimen/sd8"
                        android:layout_weight="1"
                        android:backgroundTint="@color/midgreen"
                        app:cardCornerRadius="@dimen/sd12">

                        <TextView
                            android:id="@+id/salesmanLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_logout_darkgreen"
                            android:gravity="center"
                            android:padding="@dimen/sd8"
                            android:text="Logout"
                            android:textColor="@color/lightred"
                            android:textSize="@dimen/sd10"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>