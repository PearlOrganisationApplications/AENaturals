<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen2"
    android:orientation="vertical"
    tools:context="com.aenatural.aenaturals.salesmans.SalesmanProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dist_backTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/midgreen"
            android:gravity="center"
            android:padding="@dimen/sd10"
            android:text="Your Profile"
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/sd14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableStartCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/sd10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sd6"
                android:orientation="vertical"
                android:padding="@dimen/sd10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="User Name"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd2"
                    android:text="(Salesperson)"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd12" />
            </LinearLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_skincare2" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buisness name"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="Senku healthcare"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email-id"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="email@gmail.com"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phone-no"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="894512325"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="sector-12 , mohali, punjab"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sd6"
                        android:layout_weight="1"
                        android:background="@drawable/cardbg"
                        android:orientation="vertical"
                        android:padding="@dimen/sd10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="city"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/sd10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sd2"
                            android:text="dehradun"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/sd14"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sd6"
                        android:layout_weight="1"
                        android:background="@drawable/cardbg"
                        android:orientation="vertical"
                        android:padding="@dimen/sd10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pincode"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/sd10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sd2"
                            android:text="248001"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/sd14"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="state"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="Uttarakhand"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="insta/fb-id"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="user@34x"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd6"
                    android:background="@drawable/cardbg"
                    android:orientation="vertical"
                    android:padding="@dimen/sd10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tags/notes"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sd2"
                        android:text="cheap,natural,quality"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd6"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/profile_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sd4"
                        android:layout_weight="1"
                        android:background="@drawable/cardbg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/sd8">

                        <ImageView

                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="@dimen/sd6"
                            android:src="@drawable/ic_skincare2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="profile image"
                            android:textColor="@color/darkgreen" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parlorpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sd4"
                        android:layout_weight="1"
                        android:background="@drawable/cardbg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/sd8">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"

                            android:layout_marginHorizontal="@dimen/sd6"

                            android:src="@drawable/ic_shop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="parlor image"
                            android:textColor="@color/darkgreen" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sd10"
        android:backgroundTint="@color/midgreen"
        android:padding="@dimen/sd4"
        android:text="Update Profile"
        android:textColor="@color/darkgreen"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <include
            android:id="@+id/dist_customercareLayout"
            layout="@layout/customercarelayout"
            android:visibility="gone" />

        <include
            android:id="@+id/dist_privacypolicylayout"
            layout="@layout/privacypolicylayout"
            android:visibility="gone" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customerOrderHistoryRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/sd4"
        android:layout_marginVertical="@dimen/sd6"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/dist_customercarebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sd14"
            android:layout_marginVertical="@dimen/sd8"
            android:layout_weight="1"
            android:backgroundTint="@color/midgreen"
            app:cardCornerRadius="@dimen/sd12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_supportdarkgreen"
                android:gravity="center"
                android:padding="@dimen/sd8"
                android:text="Customer Care"
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/sd10"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dist_privacypolicyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sd14"
            android:layout_marginVertical="@dimen/sd8"
            android:layout_weight="1"
            android:backgroundTint="@color/midgreen"
            app:cardCornerRadius="@dimen/sd12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_text_snippet_24"
                android:gravity="center"
                android:padding="@dimen/sd8"
                android:text="Privacy Policy"
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/sd10"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sd14"
            android:layout_marginVertical="@dimen/sd8"
            android:layout_weight="1"
            android:backgroundTint="@color/midgreen"
            app:cardCornerRadius="@dimen/sd12">

            <TextView
                android:id="@+id/dist_Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_logout_darkgreen"
                android:gravity="center"
                android:padding="@dimen/sd8"
                android:text="Logout"
                android:textColor="@color/lightred"
                android:textSize="@dimen/sd10"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>




