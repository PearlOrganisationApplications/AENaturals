<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sd6"
    android:backgroundTint="@color/lightgreen"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="2dp"
    >
    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/distibutorpiechart"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:egLegendColor="@color/darkgreen"
        app:egInnerValueString="sdf"
        app:egInnerValueColor="@color/darkgreen"
        app:egLegendTextSize="@dimen/sd12"
        app:egInnerValueSize="@dimen/sd12"
     />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1.3"
    android:gravity="center"
    android:paddingHorizontal="@dimen/sd10"
    android:padding="@dimen/sd6"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="@dimen/sd8"
                android:layout_height="@dimen/sd8"
                android:background="@color/darkgreen"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salesman 1"
            android:textColor="@color/darkgreen"
            android:layout_margin="@dimen/sd2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="@dimen/sd8"
                android:layout_height="@dimen/sd8"
                android:background="#00BFA5"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salesman 2"
            android:textColor="@color/darkgreen"
            android:layout_margin="@dimen/sd2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="@dimen/sd8"
                android:layout_height="@dimen/sd8"
                android:background="#1DE9B6"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salesman 3"
            android:textColor="@color/darkgreen"
            android:layout_margin="@dimen/sd2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
        <LinearLayout
            android:layout_width="@dimen/sd8"
            android:layout_height="@dimen/sd8"
            android:background="#64FFDA"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textColor="@color/darkgreen"
            android:layout_margin="@dimen/sd2"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>