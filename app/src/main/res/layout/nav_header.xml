<!-- nav_header.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/sd10"
    android:background="@color/birdcolor">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:src="@drawable/ic_skincare2"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Parlour"
        android:textColor="@color/white"
        android:layout_margin="@dimen/sd4"
        android:textStyle="bold"
        android:textSize="@dimen/sd16"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ae Naturals"
        android:textColor="@color/white"
        android:layout_margin="@dimen/sd4"
        android:textStyle="bold"
        android:textSize="@dimen/sd12"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
</LinearLayout>
</LinearLayout>
