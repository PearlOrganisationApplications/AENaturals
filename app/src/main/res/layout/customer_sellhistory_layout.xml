<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Item Sold History"
        android:layout_weight="1"
        android:background="@color/midgreen"
        android:gravity="center"
        android:textSize="@dimen/sd14"
        android:textColor="@color/darkgreen"
        android:paddingHorizontal="@dimen/sd10"
        android:paddingTop="@dimen/sd4"
        android:textStyle="bold"
        />
    <include
        layout="@layout/datefilter_layout"
        />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/customer_history_recyler"
        />
</LinearLayout>