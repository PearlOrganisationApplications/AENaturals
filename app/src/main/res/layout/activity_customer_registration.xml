<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    android:gravity="center"
    android:padding="@dimen/sd10"
    tools:context="com.aenatural.aenaturals.salesmans.CustomerRegistrationActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="@dimen/sd30"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_logo_aen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="@dimen/sd30"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:cardCornerRadius="@dimen/sd10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/sd20"
                        android:text="Add new \nCustomer"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/sd20"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_addform" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sd10"
                    android:layout_marginVertical="5dp"
                    android:text="Customer Details"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sd10"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/loginedittextbg"
                        android:hint="First Name"
                        android:padding="@dimen/sd10" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sd10"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/loginedittextbg"
                        android:hint="Last Name"
                        android:padding="@dimen/sd10" />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sd10"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/loginedittextbg"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:padding="@dimen/sd10" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sd10"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/loginedittextbg"
                    android:hint="Address"
                    android:inputType="number"
                    android:padding="@dimen/sd10" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sd10"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/loginedittextbg"
                    android:hint="Address"
                    android:inputType="number"
                    android:padding="@dimen/sd10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sd10"
                    android:layout_marginVertical="5dp"
                    android:layout_marginTop="@dimen/sd10"
                    android:text="Select Gender"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sd6"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/genderMale"
                        android:layout_marginHorizontal="@dimen/sd6"
                        android:layout_weight="1"
                        android:background="@drawable/loginedittextbg"
                        android:src="@drawable/ic_userm" />

                    <ImageView
                        android:layout_width="80dp"
                        android:id="@+id/genderFemale"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="@dimen/sd6"
                        android:layout_weight="1"
                        android:background="@drawable/loginedittextbg"
                        android:src="@drawable/ic_userf" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/customerFormSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/midgreen"
        app:cardCornerRadius="@dimen/sd20"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/sd14"

            android:text="Submit"
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/sd14"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>