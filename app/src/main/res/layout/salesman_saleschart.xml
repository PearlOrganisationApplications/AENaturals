<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/sd6"
    app:cardCornerRadius="@dimen/sd18"
    android:backgroundTint="@color/midgreen"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/sd8"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            >
            <org.eazegraph.lib.charts.PieChart
                android:id="@+id/salesman_piechart"
                android:layout_width="wrap_content"
                android:layout_height="140dp"

                app:egLegendColor="@color/darkgreen"
                app:egInnerValueString="sdf"
                app:egInnerValueColor="@color/darkgreen"
                app:egLegendTextSize="@dimen/sd12"
                app:egInnerValueSize="@dimen/sd12"
                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Sales"
                android:fontFamily="@font/bangers"
                android:textSize="@dimen/sd20"
                android:textColor="@color/darkgreen"
                android:layout_margin="@dimen/sd2"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/sd16"
                        android:layout_height="@dimen/sd16"
                        android:src="@drawable/ic_rupeesmall"
                        app:tint="@color/darkgreen" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2200000"
                    android:fontFamily="@font/bangers"
                    android:textSize="@dimen/sd24"
                    android:textColor="@color/darkgreen"
                    android:layout_margin="@dimen/sd2"
            />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/sd26"
            android:padding="@dimen/sd4"
            android:layout_marginHorizontal="@dimen/sd14"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/sd8"
                android:layout_weight="1"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="profit"
                    android:textSize="@dimen/sd10"
                    android:textColor="@color/darkgreen"
                    android:layout_margin="@dimen/sd2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24%"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold"
                    android:textColor="@color/darkgreen"
                    android:layout_margin="@dimen/sd2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sd8"
                    android:background="@color/darkgreen"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/sd8"
                android:layout_weight="1"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pending"
                    android:textSize="@dimen/sd10"
                    android:textColor="@color/darkgreen"
                    android:layout_margin="@dimen/sd2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12%"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold"
                    android:textColor="@color/darkgreen"
                    android:layout_margin="@dimen/sd2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sd8"
                    android:background="@color/teal_700"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_margin="@dimen/sd8"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd2"
                    android:text="return"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sd2"
                    android:text="4%"
                    android:textColor="@color/darkgreen"
                    android:textSize="@dimen/sd14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sd8"
                    android:background="@color/teal_200" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>