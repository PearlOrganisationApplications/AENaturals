<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/sd6"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/midgreen"
        android:text="Retailers"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingVertical="6dp"
        android:drawableEnd="@drawable/ic_plus2_24"
        android:paddingHorizontal="@dimen/sd10"
        android:textSize="@dimen/sd12"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/salesMidsectionRecylerView"
        />

</LinearLayout>